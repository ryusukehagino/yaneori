---
/**
 * 基金ページ
 */
import {IMG_PATH} from '../consts.js';
import Layout from '@layouts/Layout.astro';
import Mainvisual from '@components/Mainvisual.astro';
import ContentsBox from '@layouts/ContentsBox.astro';
import Btn from '@components/Btn.astro';
---

<Layout>
	<Mainvisual>
		<Fragment slot="default">基金</Fragment>
		<Fragment slot="sub">/ FUND</Fragment>
	</Mainvisual>
	<ContentsBox>
		<div class="fund">
			<p class="text">
				株式会社屋根折りの活動を支援してくださる方は、下記から送金をお願いします。<br>
				ファンレターはnoteで返信します。<br>
				バカおもろい未来にしてみせます！
			</p>
			<Btn href="https://ofuse.me/yaneori">OFUSE</Btn>
			<p class="qr">
				<img src={IMG_PATH + "fund/fund_qr.webp"} alt="OFUSE QRコード" width="" height="">
			</p>
		</div>
		<!-- /.fund -->
	</ContentsBox>
</Layout>

<style lang="scss">
:global(.contentsBox) {
	@include g.mq('lg') {
		margin-top: 80px;
	}
}

.text {
	font-size: min(g.get_vw(16), 1.8rem);
	font-weight: 500;
	text-align: center;
}

:global(.btn) {
	margin: 30px auto 0;
}

.qr {
	margin-top: 30px;
	text-align: center;
}

:global(.footer) {
	@include g.mq('lg') {
		margin-top: min(g.get_vw(100), 200px);
	}
}
</style>
