---
/**
 * テキスト下線
 */
interface Props {
    addClass?: string|string[];
}

const { addClass = '' } = Astro.props;

---
<span class="textMerker"><slot/></span>


<style lang="scss">
.textMerker {
    position: relative;
    display: inline-block;
    line-height: 1.3;

    &::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 0;
        width: 100%;
        height: 7px;
        background-color: rgba(g.$color_accent, 0.3);
        border-radius: 100vmax;
    }
}
</style>
