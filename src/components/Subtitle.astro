---
/**
 * サブタイトル
 */
interface Props {
    Element?: string;
    addClass?: string|string[];
}

const { Element = 'h3', addClass = '' } = Astro.props;
---
<Element class:list={['subtitle', addClass]}>
    <slot />
</Element>


<style lang="scss">
.subtitle {
    position: relative;
    width: fit-content;
    margin-inline: auto;
    font-size: min(g.get_vw(22), 2.8rem);
    font-weight: 500;

    &::before, &::after {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        margin: auto;
        width: 30px;
        height: 1px;
        border: 1px solid g.$color_border;
    }

    &::before {
        left: -1em;
        translate: -100%;
    }
    
    &::after {
        right: -1em;
        translate: 100%;
    }
}
</style>
